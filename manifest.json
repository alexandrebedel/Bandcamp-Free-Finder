{
	"manifest_version": 3,
	"name": "Find free albums on Bandcamp",
	"description": "Highlight free/name-your-price releases on Bandcamp.",
	"version": "1.1.0",
	"host_permissions": ["*://*.bandcamp.com/music"],
	"content_scripts": [
		{
			"matches": ["*://*.bandcamp.com/*"],
			"js": ["js/content.js"],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_title": "Bandcamp Free Finder"
	},
	"background": {
		"service_worker": "js/bg.js"
	}
}
